@model IEnumerable<E_Commerce_App.Models.Category>

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Category List</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Add any additional stylesheets here -->
</head>
<body>
    <div class="container mt-5">
        <h1>Category List</h1>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src=@Html.DisplayFor(modelItem => item.Img) alt="Category Image" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <p class="card-text"><strong>Type:</strong> @Html.DisplayFor(modelItem => item.Type)</p>
                            <p class="card-text"><strong>Amount:</strong> @Html.DisplayFor(modelItem => item.Amount)</p>
                            <a asp-controller="ViewModels" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary">View Products</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Scripts and footer here -->
</body>
</html>
