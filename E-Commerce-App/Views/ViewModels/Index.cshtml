@model E_Commerce_App.ViewModels.ProductAndCategoryVM

<h1>@Model.Category.Name</h1>
<h3>@Model.Category.Type</h3>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Expiry Date</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Product)
            {
                <tr>
                    <td>
                        <div class="card" style="width: 18rem;">
                            <img src="@item.Image" class="card-img-top" alt="...">
                            <div class="card-body">
                               
                                <!-- Add any additional content or information here -->
                            </div>
                        </div>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ExpiryDate</td>
                    <td>@item.Description</td> 
                  
                    
                    <td>
                    @if (User.IsInRole("Editor"))
                    {
                        <a asp-controller="Product" asp-action="Edit" asp-route-productId="@item.Id" class="btn btn-primary">Edit</a>
                    }
                    else
                    {
                        <button type="button" class="btn btn-primary" disabled>Edit</button>
                      
                    }
                    </td>
                    <td>
                        @if(User.IsInRole("Editor"))
                        {
                            <button type="button" class="btn btn-danger" disabled>Delete</button>
                        }
                        else
                        {
        
                        <a asp-controller="Product" asp-action="Delete" asp-route-productId="@item.Id" class="btn btn-danger">Delete</a>
                        }
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-productId="@item.Id" class="btn btn-outline-dark">Details</a>
                    </td>
                    @* <td>
                        <a asp-controller="Product" asp-action="GenerateImageFromGoogle" asp-route-productName="@item.Name">Get Image </a>
                        <img src="@Url.Action("GenerateImageFromGoogle", "Image", new { productName = item.Name })" alt="@item.Name">
                    </td> *@
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-controller="Product" asp-action="Add" class="btn btn-success">Add Product</a>
