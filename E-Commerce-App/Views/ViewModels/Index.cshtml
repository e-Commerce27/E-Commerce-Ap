@model E_Commerce_App.ViewModels.ProductAndCategoryVM

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

<div class="table-responsive" style="margin-top:140px; padding:20px">
    <div class="row">
        <div class="col-md-6">
            <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">

                <h1 class="display-5 mb-4" style="color: #070">@Model.Category.Name Products</h1>
            </div>
        </div>
      
    </div>

    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-0 gx-5 align-items-end">
                <div class="col-lg-6">
                       
             
                </div>
                <div class="col-lg-6 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
               
                            <a class="btn btn-outline-primary border-2 active" asp-controller="Product" asp-action="Add">Add Products</a>
                   
                </div>
            
            </div>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">

                   
                    <div class="row g-4">

                        @foreach (var product in Model.Product)
                        {




                            <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                <div class="product-item">
                                    <div class="position-relative bg-light overflow-hidden">
                                        <img class="img-fluid w-100" src="@product.Image" alt="Image" style="height:250px">

                                    </div>
                                    <div class="text-center p-4">
                                        <a class="d-block h5 mb-2" href="">@product.Name</a>

                                        <br>
                                        <span class="text-secondary me-1">@product.Description</span>
                                        <h6 class="text-body" href=""><i class="fa fa-shopping-bag text-primary me-2"></i>$@product.Price</h6>

                                    </div>
                                    <div class="d-flex border-top">
                                            @if (User.IsInRole("Editor"))
                        {
                             <small class="w-50 text-center border-end py-2">
                            <a asp-controller="Product" asp-action="Edit" asp-route-productId="@product.Id" class="btn btn-primary">Edit</a>
                      </small>
                                            <small class="w-50 text-center border-end py-2">
                                                <button type="button" class="btn btn-danger" disabled>Delete</button>
                                            </small>
                        }
                        else
                        {
                             <small class="w-50 text-center border-end py-2">
                            <button type="button" class="btn btn-primary" disabled>Edit</button></small>
                                            <small class="w-50 text-center border-end py-2">
                                                <a asp-controller="Product" asp-action="Delete" asp-route-productId="@product.Id" class="btn btn-danger">Delete</a>
                                            </small>
                        }
                    
                       
                       
                                        <small class="w-50 text-center border-end py-2">

                                            <a class="text-body" asp-action="Details" asp-controller="Product" asp-route-productId="@product.Id"><i class="fa fa-eye text-primary me-2"></i>View detail</a>
                                        </small>
                                  
                                    </div>
                                </div>
                            </div>

                        }
                        <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.1s">
                            <a class="btn btn-outline-primary rounded-pill py-3 px-5" asp-controller="Category" asp-action="Index">Back To Category</a>
                        </div>
                    </div>
                </div>

                
                </div>
            </div>
        </div>
    </div>



