@model E_Commerce_App.ViewModels.ProductAndCategoryVM

<h1>@Model.Category.Name</h1>
<h3>@Model.Category.Type</h3>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Expiry Date</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Product)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ExpiryDate</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-productId="@item.Id" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Delete" asp-route-productId="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-controller="Product" asp-action="Add" class="btn btn-success">Add Product</a>
