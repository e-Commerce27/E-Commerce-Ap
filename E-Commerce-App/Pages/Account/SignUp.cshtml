@page
@model E_Commerce_App.Pages.Account.SignUpModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin:150px"></div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1>Add new User</h1>
<form method="post">
                        <div class="form-group">
        <label asp-for="register.Username">Name </label>
        <input asp-for="register.Username" />
        <span asp-validation-for="register.Username"></span>
    </div>
                        <div class="form-group">
        <label asp-for="register.Email">Email</label>
        <input asp-for="register.Email" />
        <span asp-validation-for="register.Email"></span>
    </div>
                        <div class="form-group">
        <label asp-for="register.PhoneNumber">Phone Number</label>
        <input asp-for="register.PhoneNumber" />
        <span asp-validation-for="register.PhoneNumber"></span>
    </div>
                        <div class="form-group">
        <label asp-for="register.Password">Password</label>
        <input asp-for="register.Password" type="password" />
        <span asp-validation-for="register.Password"></span>
    </div>

                        <div class="form-group">
        <label asp-for="register.Roles">Roles</label>
                            <select asp-for="register.Roles" class="form-control">
          
            <option value="User" selected>User</option>
        </select>
        <span asp-validation-for="register.Roles"></span>
    </div>

   <div class="text-center" style="margin-top:25px">
                            <input type="submit" class="btn btn-primary" value="Sign Up" />
                        </div>
</form>
                    <div id="signupSuccessMessage" class="alert alert-success" style="display:none;">
                        Sign up has been successful!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
